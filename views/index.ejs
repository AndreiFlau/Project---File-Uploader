<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Noodle Drive</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <h1>üçú Noodle Drive</h1>
    <% if(!user) {%>
    <h2><a href="/register">Register</a> or <a href="/login">Log in</a> and start uploading your files now!</h2>
    <%} else { %>
    <h1>Welcome back <%= user.username %></h1>
    <div class="folders">
      <% if(folders) folders.forEach(function (folder){%>
      <h1><a href="/<%= folder.name %>"><%= folder.name %></a></h1>
    </div>
    <p>Create a folder <a href="/createfolder">here</a></p>
    <p><a href="/log-out">Log out</a></p>
    <% }) %> <% } %>
  </body>
</html>
